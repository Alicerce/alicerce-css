{
  "name": "alicerce-css",
  "version": "1.0.0",
  "description": "Alicerse CSS framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alicerce/alicerce-css.git"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "src/index.js",
  "author": "Luiz tanure <letanure@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "npx git-cz",
    "build:stylus": "stylus ./src --out ./dist --compress",
    "watch:stylus": "stylus ./src --out ./dist --watch --sourcemap",
    "deploy:site": "echo deploy",
    "lint:stylus": "stylint ./src --config .stylintrc",
    "lint:stylus:watch": "stylint ./src --config .stylintrc --watch",
    "semantic-release": "semantic-release",
    "test": "echo test"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "git-cz": "^3.0.1",
    "semantic-release": "^15.13.12",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "yorkie": "^2.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gitHooks": {
    "commit-msg": "commitlint -E GIT_PARAMS"
  }
}
